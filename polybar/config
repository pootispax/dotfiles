[module/xwindow]
type = internal/xwindow
label = %title:0:80:...%

;==========================================================

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = false

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-underline = 
label-focused-padding = 2
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.color1}

; unfocused = Inactive workspace on any monitor
label-unfocused = 
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = 
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}


;==========================================================

[module/pulseaudio]
type = internal/pulseaudio

; Format 
format-volume = <ramp-volume><label-volume>

label-mode-padding = 0
label-volume = %percentage%%
label-volume-foreground = ${colors.background}
label-volume-background = ${colors.color1}
label-volume-padding-right = 2

label-muted =  muted
label-muted-foreground = ${colors.background}
label-muted-background = ${colors.color1}
label-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-padding-right = 1
ramp-volume-padding-left = 2

ramp-volume-foreground = ${colors.background}
ramp-volume-background = ${colors.color1}

;==========================================================

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 1

format-connected = %{A1:networkmanager_dmenu:}<label-connected>%{A}
label-connected =  %essid:03:20%
label-connected-foreground = ${colors.background}
label-connected-background = ${colors.color1}
label-connected-padding = 2

format-disconnected = %{A1:networkmanager_dmenu:}<label-disconnected>%{A}
label-disconnected =  Disconnected
label-disconnected-foreground = ${colors.background}
label-disconnected-background = ${colors.color1}
label-disconnected-padding = 2

;==========================================================

[module/date]
type = internal/date
interval = 1

date = %a %d %B
time = %H:%M

label = %date%, %time%
label-foreground = ${colors.background}
label-background = ${colors.color1}
label-padding = 2


;==========================================================

[module/battery]
